{
  "name": "femmecubator-ui-repo",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@hookform/resolvers": "^1.1.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "axios": "^0.20.0",
    "lodash": "^4.17.20",
    "msw": "^0.24.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-ga": "^3.2.0",
    "react-hook-form": "^6.12.0",
    "react-material-ui-carousel": "^2.1.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.4",
    "universal-cookie": "^4.0.4",
    "yup": "^0.32.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:local:backend": "cd ../femmecubator-api-repo && npm run start-debug",
    "start:local:frontend": "cd ../femmecubator-ui-repo && npm start",
    "start-local": "run-p start:local:* -- --watch",
    "start:mock": "REACT_APP_MOCK_API_TRUE=true npm start",
    "build": "react-scripts build",
    "storybook": "start-storybook -p 6006 -s public --no-dll",
    "build-storybook": "build-storybook -s public --no-dll",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --env=jsdom --watchAll=false --coverage --passWithNoTests",
    "eject": "react-scripts eject",
    "lint": "eslint -f checkstyle . -o output/eslint/lint-results.xml && eslint -f html . -o output/eslint/eslint-report.html",
    "fix:eslint": "eslint --fix \"**/*.*\"",
    "fix:prettier": "prettier --write \"**/*.*\"",
    "fix": "run-p fix:*"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/node-logger": "^6.0.28",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^6.0.28",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.5.0",
    "babel-loader": "^8.1.0",
    "dot-env": "0.0.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^1.7.0",
    "ghooks": "^2.0.4",
    "lint-staged": "^10.5.2",
    "miragejs": "^0.1.41",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "prettier": {
    "singleQuote": true
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test:coverage"
    }
  }
}
